{
    "name": "koajs-template",
    "version": "1.0.0",
    "description": "rest api template for whatever",
    "main": "./src/server.ts",
    "scripts": {
        "dev": "ENVIRONMENT=dev NODE_ENV=development ts-node-dev src/server",
        "prod": "ENVIRONMENT=prod pm2 start pm2.config.js",
        "lint": "tslint -c tslint.main.json 'src/**/*.ts' 'tests/**/*.ts'",
        "test": "ENVIRONMENT=test mocha -r ts-node/register ./tests/**/*.test.ts",
        "coverage": "nyc npm run test",
        "coverage-lcov": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/robindespouys/koajs-template.git"
    },
    "author": "robin despouys",
    "license": "ISC",
    "dependencies": {
        "argon2": "^0.28.3",
        "class-validator": "^0.13.2",
        "dotenv": "^10.0.0",
        "joi": "^17.5.0",
        "jsonwebtoken": "^8.5.1",
        "koa": "^2.13.4",
        "koa-bodyparser": "^4.3.0",
        "koa-router": "^10.1.1",
        "ts-node": "^10.4.0",
        "typeorm": "^0.2.41",
        "validator": "^13.7.0"
    },
    "devDependencies": {
        "@types/chai": "^4.3.0",
        "@types/jsonwebtoken": "^8.5.6",
        "@types/koa": "^2.13.4",
        "@types/koa-bodyparser": "^4.3.5",
        "@types/koa-router": "^7.4.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "^17.0.8",
        "@types/supertest": "^2.0.11",
        "chai": "^4.3.4",
        "mocha": "^9.1.3",
        "nyc": "^15.1.0",
        "supertest": "^6.1.6",
        "ts-node-dev": "^1.1.8",
        "tslint": "^6.1.3",
        "typescript": "^4.5.4"
    }
}
